.detail-container{
  display: flex;
  flex-direction: column;
}
.detail-title{
  display: flex;
  justify-content: center;
  margin: 0 0 18rpx 0;
  padding: 12rpx 0;
  background-color: #fff;
}
.detail-title text{
  font-size: 32rpx;
  font-weight: 600;
}
.detail-input{
  margin: 20rpx 0;
}
.bottom-btn-wrapper{
	position: fixed;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
}
.bottom-btn{
	background-color: rgb(204, 236, 226)	;
	width: 80px;
	height: 80px;
	color: #2F4F4F;
	font-weight: 600;
	font-size: 22px;
	box-shadow: 2px 2px 6px 2px rgba(0, 102, 102,.3)
}